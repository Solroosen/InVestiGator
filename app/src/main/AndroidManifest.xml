<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.investigation_deduction">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_No_Title_Bar">
        <activity
            android:name=".investigator_MainActivity"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".investigator_instructions"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".investigator_play"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".investigator_guess"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".investigator_final"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".investigator_stats"
            android:screenOrientation="sensorLandscape" />
    </application>

</manifest>